  --><android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="?listPreferredItemHeight"
    android:background="@drawable/bg_list_item_ripple">

    <com.kevalpatel2106.common.view.BaseImageView
        android:id="@+id/setting_row_icon_iv"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginStart="?listPreferredItemPaddingLeft"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="?attr/colorAccent"
        tools:srcCompat="@drawable/ic_notifications_bell" />

    <com.kevalpatel2106.common.view.BaseTextView
        android:id="@+id/setting_row_title_tv"
        style="@style/MediumText.Primary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_small"
        android:maxLines="1"
        android:paddingEnd="?listPreferredItemPaddingRight"
        android:singleLine="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/setting_row_icon_iv"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="RtlSymmetry"
        tools:text="Notifications" />

    <View
        android:id="@+id/settings_row_divider"
        android:layout_width="0dp"
        android:layout_height="1px"
        android:background="@color/divider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</android.support.constraint.ConstraintLayout>
