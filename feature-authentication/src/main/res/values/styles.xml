<resources>
    <!--Intro logo-->
    <style name="IntroLogoStyle">
        <item name="android:alpha">0.2</item>
    </style>

    <style name="LoginTextInputsCounterAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="GoogleSignInBtn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/md_button_height</item>
        <item name="android:textAlignment">center</item>
        <item name="android:backgroundTint">?attr/colorAccent</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="LoginBtn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/md_button_height</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:paddingEnd">@dimen/spacing_large</item>
        <item name="android:paddingStart">@dimen/spacing_large</item>
        <item name="android:backgroundTint">?attr/colorAccent</item>
    </style>


    <style name="FbSignInBtn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/md_button_height</item>
        <item name="android:backgroundTint">@color/fb</item>
        <item name="android:textAlignment">center</item>
        <item name="android:text">@string/sign_in_with_facebook</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>
