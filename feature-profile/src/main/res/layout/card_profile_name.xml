<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/CardViewStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:contentPadding="0dp">

    <!--User name input box-->
    <android.support.design.widget.TextInputLayout
        android:id="@+id/profile_name_tiv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_huge"
        android:layout_margin="@dimen/spacing_micro"
        android:textColorHint="?android:attr/textColorSecondary"
        app:counterMaxLength="40"
        app:counterTextAppearance="@style/NanoText.Secondary"
        app:errorEnabled="true"
        app:hintAnimationEnabled="true"
        app:hintTextAppearance="@style/SmallText.Secondary">

        <com.kevalpatel2106.common.view.BaseEditText
            android:id="@+id/edit_profile_name_et"
            style="@style/MediumText.Primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/profile_name_hint"
            android:imeOptions="actionNext"
            android:inputType="textPersonName"
            android:maxLength="40"
            tools:text="@tools:sample/lorem" />
    </android.support.design.widget.TextInputLayout>

</android.support.v7.widget.CardView>