<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kevalpatel2106.standup.authentication.deviceReg.DeviceRegisterActivity"
    tools:layout_editor_absoluteY="25dp">

    <com.kevalpatel2106.base.view.BaseImageView
        android:id="@+id/device_reg_iv"
        android:layout_width="@dimen/device_reg_screen_clock_iv_dimen"
        android:layout_height="@dimen/device_reg_screen_clock_iv_dimen"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/red_tone_iv"
        app:srcCompat="@drawable/avd_nine_to_five" />

    <com.kevalpatel2106.base.view.BaseImageView
        android:id="@+id/red_tone_iv"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:elevation="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bg_splash" />

    <com.kevalpatel2106.base.view.BaseTextView
        android:id="@+id/textView"
        style="@style/LargeText.Primary"
        android:layout_width="328dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_small"
        android:layout_marginEnd="@dimen/spacing_small"
        android:layout_marginStart="@dimen/spacing_small"
        android:elevation="16dp"
        android:text="@string/setting_up_your_device"
        app:layout_constraintBottom_toBottomOf="@+id/red_tone_iv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</android.support.constraint.ConstraintLayout>
