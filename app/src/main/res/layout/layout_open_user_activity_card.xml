<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view_user_activity_card"
    style="@style/CardViewStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/card_horizontal_margin"
    android:layout_marginTop="@dimen/card_horizontal_margin"
    android:background="?selectableItemBackground"
    app:contentPaddingBottom="@dimen/spacing_small"
    app:contentPaddingLeft="@dimen/spacing_micro"
    app:contentPaddingRight="@dimen/spacing_micro"
    app:contentPaddingTop="@dimen/spacing_small">

    <com.kevalpatel2106.common.view.BaseTextView
        android:id="@+id/view_user_activity_tv"
        style="@style/MediumText.Primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="@dimen/spacing_micro"
        android:drawableStart="@drawable/ic_arrow_forward"
        android:drawableTint="@color/colorSecondaryText"
        android:text="@string/view_user_activity_list"
        tools:ignore="UnusedAttribute"/>
</android.support.v7.widget.CardView>
