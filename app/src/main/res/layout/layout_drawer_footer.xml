<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_account_holder_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/colorWindowBackground"
    app:cardCornerRadius="0dp"
    app:cardElevation="@dimen/spacing_micro">

    <com.kevalpatel2106.common.view.BaseTextView
        android:id="@+id/nav_buy_pro"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="?selectableItemBackground"
        android:drawablePadding="@dimen/spacing_xlarge"
        android:drawableStart="@drawable/ic_monetization_on_black"
        android:gravity="center_vertical"
        android:paddingEnd="@dimen/spacing_small"
        android:paddingStart="@dimen/spacing_small"
        android:text="@string/nav_header_purchase"
        android:textAppearance="@style/SmallText.Primary"
        android:textStyle="bold"/>
</android.support.v7.widget.CardView>
