<android.support.v7.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!--Select weather to display popups or not?-->
    <com.kevalpatel2106.standup.settings.widget.BaseTopSwitchPreference
        android:key="@string/pref_key_daily_review_enable"
        android:switchTextOff="@string/switch_off"
        android:switchTextOn="@string/switch_on"
        android:title="Enable" />

    <com.kevalpatel2106.standup.settings.widget.BasePreference
        android:key="@string/pref_key_daily_review_time"
        android:title="Send notification at..."
        tools:summary="9:00 AM" />

    <com.kevalpatel2106.standup.settings.widget.HintPreference android:summary="Get daily summary of your previous day activities. Hope this will motivated you!!!" />
</android.support.v7.preference.PreferenceScreen>