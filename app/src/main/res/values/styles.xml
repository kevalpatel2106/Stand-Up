<resources>

    <style name="ErrorTextViewStyle" parent="Base.TextAppearance.AppCompat.Medium">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="LargeText.Primary" parent="Base.TextAppearance.AppCompat.Large">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="MediumText.Primary" parent="Base.TextAppearance.AppCompat.Medium">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textColorHint">?android:attr/textColorSecondary</item>
    </style>

    <style name="SmallText.Primary" parent="Base.TextAppearance.AppCompat.Small">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="NanoText.Primary" parent="Base.TextAppearance.AppCompat.Small">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="LargeText.Secondary" parent="Base.TextAppearance.AppCompat.Large">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="MediumText.Secondary" parent="Base.TextAppearance.AppCompat.Medium">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="SmallText.Secondary" parent="Base.TextAppearance.AppCompat.Small">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="NanoText.Secondary" parent="Base.TextAppearance.AppCompat.Small">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!--Intro logo-->
    <style name="IntroLogoStyle">
        <item name="android:alpha">0.2</item>
    </style>

    <style name="LoginTextInputsCounterAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="GoogleSignInBtn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/md_button_height</item>
        <item name="android:backgroundTint">@android:color/white</item>
        <item name="android:textAlignment">center</item>
        <item name="android:text">@string/sign_in_with_google</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="LoginBtn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/md_button_height</item>
        <item name="android:text">@string/login_using_email</item>
        <item name="android:backgroundTint">?attr/colorAccent</item>
    </style>

    <style name="CreateAccountBtn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/md_button_height</item>
        <item name="android:layout_above">@id/btn_login_using_email</item>
        <item name="android:text">@string/create_account</item>
        <item name="android:backgroundTint">@color/colorPrimaryLight</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="FbSignInBtn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/md_button_height</item>
        <item name="android:backgroundTint">@color/fb</item>
        <item name="android:textAlignment">center</item>
        <item name="android:text">@string/sign_in_with_facebook</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>