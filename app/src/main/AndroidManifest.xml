<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.kevalpatel2106.standup">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="com.google.android.gms.permission.ACTIVITY_RECOGNITION" />

    <application
        android:name=".SUApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/application_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning,UnusedAttribute"
        tools:replace="android:allowBackup">

        <!-- =============================== META-DATA ================================ -->
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />
        <meta-data
            android:name="com.facebook.sdk.AutoLogAppEventsEnabled"
            android:value="false" />
        <meta-data
            android:name="com.google.android.awareness.API_KEY"
            android:value="@string/android_api_key" />
        <!-- =============================== ACTIVITIES ================================ -->


        <!-- Activity to handle deep links. -->
        <activity
            android:name=".deeplink.DeepLinkActivity"
            android:configChanges="orientation|screenSize|keyboard"
            android:launchMode="singleInstance"
            android:noHistory="true"
            android:resizeableActivity="true"
            android:theme="@style/AppTheme.NoActionbar.GreenBg"
            android:windowSoftInputMode="stateHidden"
            tools:ignore="UnusedAttribute">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="@string/api_host"
                    android:scheme="https" />
                <data
                    android:host="@string/invitation_deep_link"
                    android:scheme="https"
                    tools:ignore="AppLinkUrlError" />
            </intent-filter>
        </activity>

        <!-- Splash screen for the redirection. This is the single entry point to the application. -->
        <activity
            android:name=".SplashActivity"
            android:configChanges="orientation|screenLayout|screenSize"
            android:launchMode="singleInstance"
            android:noHistory="true"
            android:resizeableActivity="true"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Splash"
            tools:ignore="UnusedAttribute">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- Application intro screen -->
        <activity
            android:name=".authentication.intro.IntroActivity"
            android:launchMode="singleInstance"
            android:resizeableActivity="true"
            android:theme="@style/AppTheme.NoActionbar.GreenBg"
            android:windowSoftInputMode="stateHidden"
            tools:ignore="UnusedAttribute" />

        <!-- Login/Sign Up the user screen -->
        <activity
            android:name=".authentication.login.LoginActivity"
            android:resizeableActivity="true"
            android:theme="@style/AppTheme.NoActionbar.GreenBg"
            android:windowSoftInputMode="stateHidden"
            tools:ignore="UnusedAttribute" />

        <!-- Forgot password request screen -->
        <activity
            android:name=".authentication.forgotPwd.ForgotPasswordActivity"
            android:resizeableActivity="true"
            android:theme="@style/AppTheme.NoActionbar.GreenBg"
            android:windowSoftInputMode="stateHidden"
            tools:ignore="UnusedAttribute" />

        <!-- Verify your email reminder screen. -->
        <activity
            android:name=".authentication.verification.VerifyEmailActivity"
            android:resizeableActivity="true"
            android:theme="@style/AppTheme.NoActionbar"
            android:windowSoftInputMode="stateHidden"
            tools:ignore="UnusedAttribute" />

        <!-- Verify the user email with the deep link. -->
        <activity
            android:name=".authentication.verification.EmailLinkVerificationActivity"
            android:configChanges="orientation|screenSize|keyboard"
            android:resizeableActivity="true"
            android:theme="@style/AppTheme.NoActionbar.GreenBg"
            android:windowSoftInputMode="stateHidden"
            tools:ignore="UnusedAttribute" />
        <activity
            android:name=".authentication.deviceReg.DeviceRegisterActivity"
            android:resizeableActivity="true"
            android:theme="@style/AppTheme.NoActionbar"
            android:windowSoftInputMode="stateHidden"
            tools:ignore="UnusedAttribute" />

        <!-- Dashboard Activity -->
        <activity
            android:name=".main.MainActivity"
            android:resizeableActivity="true"
            android:theme="@style/AppTheme.NoActionbar"
            android:windowSoftInputMode="stateHidden"
            tools:ignore="UnusedAttribute" />

        <!-- Web view activity -->
        <activity
            android:name=".deeplink.WebViewActivity"
            android:configChanges="orientation|screenSize|keyboard"
            android:resizeableActivity="true"
            android:theme="@style/AppTheme.NoActionbar"
            android:windowSoftInputMode="stateHidden"
            tools:ignore="UnusedAttribute" />

        <!-- User profile edit screen -->
        <activity
            android:name=".profile.EditProfileActivity"
            android:resizeableActivity="true"
            android:theme="@style/AppTheme.NoActionbar"
            android:windowSoftInputMode="stateHidden"
            tools:ignore="UnusedAttribute" />

        <!-- Support development screen. -->
        <activity
            android:name=".about.donate.SupportDevelopmentActivity"
            android:configChanges="orientation|screenSize|keyboard"
            android:resizeableActivity="true"
            android:theme="@style/AppTheme.NoActionbar"
            android:windowSoftInputMode="stateHidden"
            tools:ignore="UnusedAttribute" />
        <activity
            android:name=".about.AboutActivity"
            android:resizeableActivity="true"
            android:theme="@style/AppTheme.MaterialAboutActivity"
            android:windowSoftInputMode="stateHidden"
            tools:ignore="UnusedAttribute" />
        <activity
            android:name=".about.report.ReportIssueActivity"
            android:resizeableActivity="true"
            android:theme="@style/AppTheme.NoActionbar"
            android:windowSoftInputMode="stateHidden"
            tools:ignore="UnusedAttribute" />
        <activity
            android:name=".settings.SettingsActivity"
            android:resizeableActivity="true"
            android:theme="@style/AppTheme.NoActionbar"
            android:windowSoftInputMode="stateHidden"
            tools:ignore="UnusedAttribute" />
        <activity
            android:name=".diary.detail.DetailActivity"
            android:resizeableActivity="true"
            android:theme="@style/AppTheme.NoActionbar"
            android:windowSoftInputMode="stateHidden"
            tools:ignore="UnusedAttribute" />

        <!-- =============================== RECEIVER ================================ -->
        <!-- Receive the broadcast if the user is unauthorised. -->
        <receiver
            android:name=".UnauthorizedReceiver"
            android:enabled="false"
            android:exported="false">
            <intent-filter>
                <action android:name="com.kevalpatel2106.network.unauthorized" />
            </intent-filter>
        </receiver>

        <!-- Receive the broadcast if the user is unauthorised. -->
        <receiver
            android:name=".reminder.SystemEventReceiver"
            android:enabled="false"
            android:exported="false">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.MY_PACKAGE_REPLACED" />
                <action android:name="android.intent.action.PACKAGE_CHANGED" />
            </intent-filter>
        </receiver>

        <!-- =============================== SERVICE ================================ -->
        <!-- Begin: Firebase service -->
        <service
            android:name=".fcm.FcmMessagingService"
            tools:ignore="ExportedService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service
            android:name=".fcm.InstanceIdService"
            tools:ignore="ExportedService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>
        <!-- End: Firebase service -->

        <!-- Service to register the device firebase token and other detail -->
        <service
            android:name=".authentication.deviceReg.RegisterDeviceService"
            tools:ignore="ExportedService" />

        <!-- Job service to fire the reminder notifications -->
        <service
            android:name=".reminder.notification.NotificationSchedulerService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.firebase.jobdispatcher.ACTION_EXECUTE" />
            </intent-filter>
        </service>

        <!-- Job service to monitor the user activity. -->
        <service
            android:name=".reminder.activityMonitor.ActivityMonitorService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.firebase.jobdispatcher.ACTION_EXECUTE" />
            </intent-filter>
        </service>

        <!-- Job service to sync all the user activity data with the server -->
        <service
            android:name=".reminder.sync.SyncService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.firebase.jobdispatcher.ACTION_EXECUTE" />
            </intent-filter>
        </service>
    </application>

</manifest>